# Application Settings
APP_NAME=FastAPI Template
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost/ticket_db
DB_SCHEMA=ticket

# Security
SECRET_KEY=your-secret-key-here

# SMTP Settings
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=False
MAIL_FROM=noreply@example.com

# Logging Settings (structlog)
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# LOG_RENDER_JSON: Set to 'true' for production (Loki/Grafana compatible JSON output)
LOG_RENDER_JSON=false

# Mattermost Alerting
MATTERMOST_WEBHOOK_URL=
MATTERMOST_CHANNEL=
ALERT_ENABLED=True
