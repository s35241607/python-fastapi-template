# Application Settings
APP_NAME="Ticket Management System"
APP_VERSION=1.0.0
DEBUG=false
=
# Database (使用 SQLite 進行測試)
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/ticket_db
DB_SCHEMA=ticket
=
# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
=
# MinIO 配置 - 本地 Docker
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_SECURE=true
MINIO_REGION="us-east-1"
=
# 儲存桶名稱
MINIO_BUCKET_ATTACHMENTS="ticket-attachments"
MINIO_BUCKET_IMAGES="ticket-images"
=
# 檔案大小限制 (bytes)
MAX_FILE_SIZE=52428800  # 50MB
MAX_IMAGE_SIZE=10485760  # 10MB
=
# 檔案 URL 有效期限 (秒)
FILE_URL_EXPIRY=3600  # 1 小時
