{
    "files.exclude": {
        "**/__pycache__": true
    },
    "python.defaultInterpreterPath": "./.venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.analysis.typeCheckingMode": "strict",

    // Enable format on save and prefer ruff as the formatter. If you use the "Ruff"
    // extension (charliermarsh.ruff), VS Code will use it. python.formatting.provider
    // is also set to "ruff" for tools that read that setting.
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",

    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit",
        "source.organizeImports": "explicit",
        "source.organizeImports.ruff": "explicit"
    },
    "ruff.organizeImports": true,

    // Additional optimizations for Python/FastAPI development
    "python.analysis.autoImportCompletions": true,
    "python.analysis.addImport.exactMatchOnly": false,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.include": ["**/*.py"],
    "python.analysis.exclude": ["**/__pycache__/**", "**/.venv/**", "**/node_modules/**", "**/alembic/**", "**/tests/**"],

    "editor.codeActionWidget.include": ["source.addMissingImports", "quickfix", "refactor"],
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.py": "python"
    },
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.callArgumentNames": "partial",
    "python.analysis.enablePytestSupport": true,
    "python.testing.pytestArgs": [
      "."
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}
